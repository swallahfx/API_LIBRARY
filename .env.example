# ============================================================================
# .env.example - Environment Variables Template
# ============================================================================

# Create: .env.example
# AI Knowledge Library - Environment Configuration

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=ai_library

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Configuration
DEBUG=true
SECRET_KEY=your_super_secret_key_here_change_in_production
API_V1_STR=/api/v1

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=data/uploads
ALLOWED_FILE_TYPES=application/pdf,text/plain,text/csv,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Vector Store Configuration
VECTOR_STORE_PATH=data/vector_stores
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Security Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_ORIGINS=*

# Production Database Credentials (for production deployment)
MONGO_PASSWORD=secure_mongo_password_123
REDIS_PASSWORD=secure_redis_password_123
GRAFANA_PASSWORD=secure_grafana_password_123
